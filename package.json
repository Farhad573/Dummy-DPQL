{
    "name": "dpql-demo",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "dev:backend": "npm run dev --workspace=dpql-backend",
        "dev:frontend": "npm run dev --workspace=dpql-frontend",
        "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
        "build:backend": "npm run build --workspace=dpql-backend",
        "build:frontend": "npm run build --workspace=dpql-frontend",
        "build:all": "npm run build:backend && npm run build:frontend"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}